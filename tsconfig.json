{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "express"],
      "typeRoots": ["/types", "./node_modules/@types"],
      "resolveJsonModule": true
    },
    "include": [
      "src/*.ts","src/**/*.ts","src/**/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }